# Fomage Application Configuration
# このファイルをコピーして .env ファイルを作成し、実際の値を設定してください

# =============================================================================
# アプリケーション設定
# =============================================================================

# アプリケーション名
APP_NAME=Fomage

# アプリケーションバージョン
APP_VERSION=1.0.0

# 環境設定 (development, staging, production)
ENVIRONMENT=development

# サーバーポート
SERVER_PORT=8080

# サーバーホスト
SERVER_HOST=0.0.0.0

# =============================================================================
# MongoDB設定
# =============================================================================

# MongoDB接続URI
MONGODB_URI=mongodb://localhost:27017

# MongoDBデータベース名
MONGODB_DATABASE=fomage

# MongoDB接続プールサイズ
MONGODB_MAX_POOL_SIZE=10

# MongoDB接続タイムアウト（ミリ秒）
MONGODB_CONNECT_TIMEOUT=30000

# MongoDBソケットタイムアウト（ミリ秒）
MONGODB_SOCKET_TIMEOUT=30000

# MongoDB認証データベース
MONGODB_AUTH_DATABASE=admin

# MongoDBユーザー名（認証が必要な場合）
# MONGODB_USERNAME=your_username

# MongoDBパスワード（認証が必要な場合）
# MONGODB_PASSWORD=your_password

# =============================================================================
# ログ設定
# =============================================================================

# ログレベル (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# ログファイルパス
LOG_FILE_PATH=logs/application.log

# ログファイルの最大サイズ（MB）
LOG_MAX_FILE_SIZE=100

# ログファイルの保持期間（日数）
LOG_MAX_HISTORY=30

# =============================================================================
# セキュリティ設定
# =============================================================================

# JWT秘密鍵（本番環境では必ず変更してください）
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT有効期限（秒）
JWT_EXPIRATION=3600

# JWTリフレッシュトークン有効期限（秒）
JWT_REFRESH_EXPIRATION=86400

# パスワードハッシュのソルトラウンド数
BCRYPT_ROUNDS=12

# =============================================================================
# パフォーマンス設定
# =============================================================================

# コルーチンのディスパッチャーサイズ
COROUTINE_DISPATCHER_SIZE=4

# データベース接続プールの最大サイズ
DB_MAX_POOL_SIZE=10

# データベース接続プールの最小サイズ
DB_MIN_POOL_SIZE=2

# =============================================================================
# 開発環境設定
# =============================================================================

# 開発モード（true/false）
DEV_MODE=true

# デバッグモード（true/false）
DEBUG_MODE=false

# ホットリロード（true/false）
HOT_RELOAD=true

# =============================================================================
# 外部サービス設定
# =============================================================================

# 外部APIのベースURL
EXTERNAL_API_BASE_URL=https://api.example.com

# 外部APIのタイムアウト（秒）
EXTERNAL_API_TIMEOUT=30

# =============================================================================
# 監視・メトリクス設定
# =============================================================================

# メトリクスエンドポイントの有効化（true/false）
METRICS_ENABLED=true

# メトリクスポート
METRICS_PORT=9090

# ヘルスチェックエンドポイントの有効化（true/false）
HEALTH_CHECK_ENABLED=true

# =============================================================================
# キャッシュ設定
# =============================================================================

# キャッシュの有効化（true/false）
CACHE_ENABLED=true

# キャッシュのTTL（秒）
CACHE_TTL=3600

# キャッシュの最大サイズ
CACHE_MAX_SIZE=1000

# =============================================================================
# ファイルアップロード設定
# =============================================================================

# ファイルアップロードの最大サイズ（MB）
MAX_FILE_SIZE=10

# 許可されるファイルタイプ
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# ファイルアップロードディレクトリ
UPLOAD_DIRECTORY=uploads

# =============================================================================
# 通知設定
# =============================================================================

# メール通知の有効化（true/false）
EMAIL_NOTIFICATIONS_ENABLED=false

# SMTPサーバーホスト
# SMTP_HOST=smtp.gmail.com

# SMTPサーバーポート
# SMTP_PORT=587

# SMTPユーザー名
# SMTP_USERNAME=your-email@gmail.com

# SMTPパスワード
# SMTP_PASSWORD=your-app-password

# =============================================================================
# バックアップ設定
# =============================================================================

# 自動バックアップの有効化（true/false）
AUTO_BACKUP_ENABLED=false

# バックアップスケジュール（Cron形式）
BACKUP_SCHEDULE=0 2 * * *

# バックアップ保持期間（日数）
BACKUP_RETENTION_DAYS=30

# バックアップディレクトリ
BACKUP_DIRECTORY=backups 